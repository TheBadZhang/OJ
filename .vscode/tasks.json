{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "编译当前文件",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},{
			"type": "shell",
			"label": "运行当前文件",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"args": [
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},{
			"type": "shell",
			"label": "删除当前文件可执行文件",
			"command": "rm ${fileDirname}/${fileBasenameNoExtension}",
			"args": [
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}