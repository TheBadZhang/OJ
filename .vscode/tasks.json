{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "编译当前文件(Windows)",
			"command": "gcc",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {},
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "删除当前可执行文件(Windows)",
			"command": "rm",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {},
			"args": [
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "编译并运行当前文件(Windows)",
			"command": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"args": [],
			"dependsOn": [
				"编译当前文件(Windows)"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "编译当前文件运行并输入测试数据(Windows)",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"command": "if (Test-Path ${fileDirname}/${fileBasenameNoExtension}.in) {Get-Content ${fileDirname}/${fileBasenameNoExtension}.in | ${fileDirname}/${fileBasenameNoExtension}.exe} else {${fileDirname}/${fileBasenameNoExtension}.exe}; rm ${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"dependsOn": [
				"编译当前文件(Windows)"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "判题(Windows)",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"command": "rm ${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"dependsOn": [
				"编译当前文件运行并输入测试数据(Windows)"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "编译当前文件(None-Windows)",
			"command": "g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "运行当前文件",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"args": [],
			"dependsOn": [],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "删除当前文件可执行文件",
			"command": "rm ${fileDirname}/${fileBasenameNoExtension}",
			"args": [],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}